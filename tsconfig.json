{
  "compilerOptions": {
    // Input
    "module": "commonjs",
    "moduleResolution": "node",
    // Output
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es6",
    // Config
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    // Module Mapping
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "node_modules/*"
  ]
}